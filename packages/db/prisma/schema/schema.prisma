generator kysely {
  provider = "prisma-kysely"
  output   = "../../kysely/generated"
}

// generates types of kysely using Prisma schemas along side migration automatically

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_APP")
}

model User {
  id                  String         @id @default(uuid())
  phoneNumber         String         @unique @map("phone_number")
  countryCode         String         @map("country_code")
  userName            String         @map("user_name")
  email               String?        @unique
  avatarUrl           String?        @default("avatar/3d_4.png") @map("avatar_url")
  bio                 String?        @default("Hi There, I am using Vynk")
  isVerified          Boolean?       @default(false) @map("is_verified")
  reConsent           Boolean?       @default(true) @map("re_consent")
  createdAt           DateTime       @default(now()) @map("created_at")
  updatedAt           DateTime       @updatedAt @map("updated_at")

  // Relations
  participants        Participant[]
  conversations       Conversation[]
  messages            Message[]
  reactions           Reaction[]
  stories             Story[]
  deliveries          Delivery[]
  storyViews          StoryView[]
  settings            Settings?
  sentFriendships     Friendship[]   @relation("UserSentRequest")
  receivedFriendships Friendship[]   @relation("UserReceivedRequest")

  @@unique([phoneNumber, countryCode])
  @@map("user")
}

model Settings {
  id            String   @id @default(uuid())
  userId        String   @unique @map("user_id")
  theme         String   @default("system")
  notifications Boolean  @default(true)
  soundEnabled  Boolean  @default(true) @map("sound_enabled")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("settings")
}

model Conversation {
  id              String           @id @default(uuid())
  type            ConversationType
  title           String?
  lastMessageId   String?          @unique @map("last_message_id")
  createdByUserId String           @map("created_by")
  groupImg        String?          @map("group_img")
  groupBio        String?          @default("Enter a group description here!!!") @map("group_bio")
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")
  isDeleted       Boolean          @default(false) @map("is_deleted")
  // Relations
  participants    Participant[]
  messages        Message[]
  createdByRel    User             @relation(fields: [createdByUserId], references: [id])
  lastMessageRel  Message?         @relation("LastMessage", fields: [lastMessageId], references: [id])

  @@index([createdByUserId]) // Index for fetching groups created by a user
  @@map("conversation")
}

model Participant {
  id                 String       @id @default(uuid())
  conversationId     String       @map("conversation_id")
  userId             String       @map("user_id")
  role               Role?        @default(member)
  lastReadMessageId  String?      @map("last_read_message_id")
  unreadCount        Int          @default(0) @map("unread_count")
  joinedAt           DateTime     @default(now()) @map("joined_at")
  // Relations
  conversationIdRel  Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  userIdRel          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  lastReadMessageRel Message?     @relation("LastReadMessage", fields: [lastReadMessageId], references: [id])
  updatedAt          DateTime     @updatedAt @map("updated_at")

  @@unique([conversationId, userId]) // Enforcing unique (conversation, user) pair
  @@index([lastReadMessageId])
  @@index([userId, updatedAt])
  @@index([conversationId])
  @@map("participant")
}

model Message {
  id              String        @id @default(uuid())
  conversationId  String        @map("conversation_id")
  senderId        String        @map("sender_id")
  mediaType       Media?        @default(text) @map("media_type")
  mediaUrl        String?       @map("media_url")
  content         String?
  replyTo         String?       @map("reply_to")
  isDeleted       Boolean?      @default(false) @map("is_deleted")
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")
  // Relations
  reactions       Reaction[]
  deliveries      Delivery[]
  isLastMessageOf Conversation? @relation("LastMessage")
  conversationRel Conversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderRel       User          @relation(fields: [senderId], references: [id], onDelete: Cascade)
  replyToRel      Message?      @relation("MessageReply", fields: [replyTo], references: [id])
  replies         Message[]     @relation("MessageReply")
  lastReadByRel   Participant[] @relation("LastReadMessage")

  @@index([conversationId, createdAt])
  @@index([senderId]) // Index for messages by a sender
  @@index([replyTo]) // Index for fetching thread/reply chains
  @@index([conversationId])
  @@map("message")
}

model Story {
  id            String      @id @default(uuid())
  type          Media?      @default(text)
  contentUrl    String?     @map("content_url")
  userId        String      @map("user_id")
  caption       String?
  text          String?
  expiresAt     DateTime?   @map("expires_at")
  isDeleted     Boolean     @default(false) @map("is_deleted")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  // Relations
  storyViews    StoryView[]
  storyReaction Reaction[]
  userIdRel     User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("story")
}

model StoryView {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  storyId    String   @map("story_id")
  viewedAt   DateTime @default(now()) @map("viewed_at")
  reaction   String?
  userIdRel  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  storyIdRel Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@unique([userId, storyId]) // Ensures each user can view a story only once
  @@index([storyId])
  @@map("story_view") // Name of the join table
}

model Friendship {
  id        String           @id @default(uuid())
  userId    String           @map("user_id")
  friendId  String           @map("friend_id")
  status    FriendshipStatus @default(PENDING)
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")

  // Relations
  user   User @relation("UserSentRequest", fields: [userId], references: [id], onDelete: Cascade)
  friend User @relation("UserReceivedRequest", fields: [friendId], references: [id], onDelete: Cascade)

  @@unique([userId, friendId]) // Prevents duplicate friend requests between same users
  @@index([userId, status]) // Faster queries for "Get my accepted friends"
  @@index([friendId, status])
  @@map("friendship")
}

model Reaction {
  id           String   @id @default(uuid())
  messageId    String?  @map("message_id")
  storyId      String?  @map("story_id")
  userId       String   @map("user_id")
  emoji        String?
  createdAt    DateTime @default(now()) @map("created_at")
  // Relations
  messageIdRel Message? @relation(fields: [messageId], references: [id], onDelete: Cascade)
  storyIdRel   Story?   @relation(fields: [storyId], references: [id], onDelete: Cascade)
  userIdRef    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@unique([storyId, userId]) // Prevent duplicate reactions on stories
  @@index([storyId]) // Index for fetching reactions for a story
  @@index([userId]) // Index for fetching user's reactions
  @@map("reaction")
}

model Delivery {
  id           String   @id @default(uuid())
  messageId    String   @map("message_id")
  userId       String   @map("user_id")
  status       Status?  @default(pending)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  // Relations
  messageIdRel Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  userIdRef    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@index([userId, status])
  @@map("delivery")
}

enum ConversationType {
  private
  group
  broadcast
}

enum Role {
  member
  admin
}

enum Media {
  text
  image
  video
  file
}

enum Status {
  pending
  sent
  delivered
  seen
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}
